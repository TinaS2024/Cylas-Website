datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Gast {
  id                Int @id @default(autoincrement())
  erstellungsdatum  DateTime @default (now()) 
  name              String @unique
  nachricht         String
}

